<Grid>
	<Grid.RowDefinitions>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
	</Grid.RowDefinitions>
	<Grid.ColumnDefinitions>
		<ColumnDefinition/>
		<ColumnDefinition Width="2*"/>
		<ColumnDefinition/>
	</Grid.ColumnDefinitions>

	<Label
		Grid.ColumnSpan="3"
		Text="Új ország felvétele"
		Style="{StaticResource Headline}"
		SemanticProperties.HeadingLevel="Level1" />

	<Label
		Grid.Row="1"
		Grid.Column="0"
		Text="Ország:"
		FontSize="Medium"
		VerticalTextAlignment="Center"
		HorizontalOptions="End"
		Margin="0, 0, 15, 0"/>

	<Entry x:Name="orszag"
			Grid.Row="1"
			Grid.Column="1"
			HeightRequest="70"
			Placeholder="Írja be az ország nevét:" />

	<Label
		Grid.Row="2"
		Grid.Column="0"
		Text="Terület:"
		FontSize="Medium"
		VerticalTextAlignment="Center"
		HorizontalOptions="End"
		Margin="0, 0, 15, 0"/>

	<Entry x:Name="terulet"
			Grid.Row="2"
			Grid.Column="1"
			Placeholder="Írja be a területet:" />

</Grid>


	
<VerticalStackLayout
            Padding="30,0"
            Spacing="25">

	<Label
                Text="Új ország felvétele"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

	<HorizontalStackLayout Margin="20, 0">
		<Label
					Text="Ország:"
					FontSize="Medium"
					VerticalTextAlignment="Center" 
					Margin="0, 0, 15, 0"/>

		<Entry x:Name="orszag"
                    Placeholder="Írja be az ország nevét:" />
	</HorizontalStackLayout>

	<HorizontalStackLayout Margin="20, 0">
		<Label
					Text="Terület:"
					FontSize="Medium"
					VerticalTextAlignment="Center" 
					Margin="0, 0, 15, 0"/>

		<Entry x:Name="terulet"
                    Placeholder="Írja be a területet:" />
	</HorizontalStackLayout>

	<HorizontalStackLayout Margin="20, 0">
		<Label
					Text="Népesség:"
					FontSize="Medium"
					VerticalTextAlignment="Center" 
					Margin="0, 0, 15, 0"/>

		<Entry x:Name="nepesseg"
                    Placeholder="Írja be a népesség számát:" />
	</HorizontalStackLayout>

	<HorizontalStackLayout Margin="20, 0">
		<Label
					Text="Fõváros:"
					FontSize="Medium"
					VerticalTextAlignment="Center" 
					Margin="0, 0, 15, 0"/>

		<Entry x:Name="fovaros"
                    Placeholder="Írja be a fõváros nevét:" />
	</HorizontalStackLayout>

</VerticalStackLayout>


	
<HorizontalStackLayout>
	<Label
			Text="Új ország felvétele"
			Style="{StaticResource Headline}"
			SemanticProperties.HeadingLevel="Level1" />

	<VerticalStackLayout>

		<Label
					Text="Ország:"
					FontSize="Medium"
					VerticalTextAlignment="Center" 
					Margin="0, 0, 15, 0"/>

		<Label
					Text="Terület:"
					FontSize="Medium"
					VerticalTextAlignment="Center" 
					Margin="0, 0, 15, 0"/>

		<Label
					Text="Népesség:"
					FontSize="Medium"
					VerticalTextAlignment="Center" 
					Margin="0, 0, 15, 0"/>

		<Label
					Text="Fõváros:"
					FontSize="Medium"
					VerticalTextAlignment="Center" 
					Margin="0, 0, 15, 0"/>
	</VerticalStackLayout>
	<VerticalStackLayout>

		<Entry x:Name="orszag" Placeholder="Írja be az ország nevét:" />
		<Entry x:Name="terulet" Placeholder="Írja be a területet:" />
		<Entry x:Name="nepesseg" Placeholder="Írja be a népesség számát:" />
		<Entry x:Name="fovaros" Placeholder="Írja be a fõváros nevét:" />

	</VerticalStackLayout>

</HorizontalStackLayout>